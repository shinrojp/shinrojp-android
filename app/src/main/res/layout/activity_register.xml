<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_auth_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_auth_back"
                android:layout_margin="16dp"/>

            <com.shinro.shinrojp_android.views.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textSize="22dp"
                android:textColor="#fff"
                android:layout_marginLeft="16dp"
                android:layout_margin="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:background="@drawable/ic_auth_signup"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.shinro.shinrojp_android.views.CustomEditText
                android:textSize="16sp"
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/auth_edt_username"
                android:textColorHint="@color/signin_text"
                android:textColor="@color/signin_text"
                android:layout_marginLeft="60dp"
                android:inputType="text"
                android:background="#0000"
                android:maxLength="20"
                android:padding="16dp"
                android:drawableLeft="@drawable/ic_auth_user"
                android:drawablePadding="35dp"
                android:layout_marginRight="65dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_height="1dp"
                android:background="@color/signin_text" />

            <com.shinro.shinrojp_android.views.CustomEditText
                android:textSize="16sp"
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/auth_edt_email"
                android:textColorHint="@color/signin_text"
                android:textColor="@color/signin_text"
                android:layout_marginLeft="60dp"
                android:inputType="text"
                android:background="#0000"
                android:maxLength="20"
                android:padding="16dp"
                android:drawableLeft="@drawable/ic_auth_email"
                android:drawablePadding="35dp"
                android:layout_marginRight="65dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_height="1dp"
                android:background="@color/signin_text" />

            <com.shinro.shinrojp_android.views.CustomEditText
                android:textSize="16sp"
                android:id="@+id/edtPassword"
                android:drawablePadding="38dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/auth_edt_password"
                android:textColorHint="@color/signin_text"
                android:textColor="@color/signin_text"
                android:layout_marginLeft="60dp"
                android:inputType="textPassword"
                android:background="#0000"
                android:padding="16dp"
                android:maxLength="20"
                android:drawableLeft="@drawable/ic_auth_password"
                android:layout_marginRight="65dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_height="1dp"
                android:background="@color/signin_text"
                android:layout_marginBottom="63dp"/>

        </LinearLayout>

    </LinearLayout>

    <com.shinro.shinrojp_android.views.CustomTextView
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_auth_rect"
        android:text="@string/auth_tv_register"
        android:textSize="20sp"
        android:textColor="#9e3d41"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:padding="13dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="18dp"/>

</RelativeLayout>
